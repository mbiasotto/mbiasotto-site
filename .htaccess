# Custom 404 page for better UX and SEO
ErrorDocument 404 /404.php

# SEO: Block access to sensitive files that could hurt SEO
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

<Files "composer.json">
    Order allow,deny
    Deny from all
</Files>

<Files "composer.lock">
    Order allow,deny
    Deny from all
</Files>

# SEO: Allow access to robots.txt and sitemap.xml
<Files "robots.txt">
    Order allow,deny
    Allow from all
</Files>

<Files "sitemap.xml">
    Order allow,deny
    Allow from all
</Files> 