<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 600 400" style="background: linear-gradient(135deg, #3498db 0%, #9b59b6 100%);">
  <!-- Background pattern -->
  <defs>
    <pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse">
      <path d="M 50 0 L 0 0 0 50" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill="url(#grid)"/>
  
  <!-- Main illustration -->
  <g transform="translate(150, 80)">
    <!-- Person -->
    <circle cx="100" cy="60" r="30" fill="#fff" opacity="0.9"/>
    <rect x="80" y="90" width="40" height="80" rx="20" fill="#fff" opacity="0.9"/>
    
    <!-- Laptop -->
    <rect x="180" y="120" width="80" height="50" rx="5" fill="#2c3e50"/>
    <rect x="185" y="125" width="70" height="35" fill="#27ae60"/>
    <rect x="190" y="130" width="60" height="25" fill="#2c3e50"/>
    
    <!-- Code lines -->
    <rect x="195" y="135" width="30" height="2" fill="#e74c3c"/>
    <rect x="195" y="140" width="40" height="2" fill="#f39c12"/>
    <rect x="195" y="145" width="25" height="2" fill="#3498db"/>
  </g>
  
  <!-- Title -->
  <text x="300" y="320" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="24" font-weight="bold">
    Como Contratar Programador PHP
  </text>
  <text x="300" y="350" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-family="Arial, sans-serif" font-size="16">
    Sem Entender de Tecnologia
  </text>
</svg> 