<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 600 400" style="background: linear-gradient(135deg, #667eea 0%, #f093fb 100%);">
  <!-- Background -->
  <defs>
    <pattern id="circuit" width="50" height="50" patternUnits="userSpaceOnUse">
      <circle cx="25" cy="25" r="2" fill="rgba(255,255,255,0.2)"/>
      <path d="M0 25h50M25 0v50" stroke="rgba(255,255,255,0.1)" stroke-width="1"/>
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill="url(#circuit)"/>
  
  <!-- Robot/Bot -->
  <g transform="translate(150, 120)">
    <rect x="0" y="20" width="60" height="80" rx="10" fill="#fff" opacity="0.9"/>
    <circle cx="20" cy="40" r="8" fill="#3498db"/>
    <circle cx="40" cy="40" r="8" fill="#3498db"/>
    <rect x="15" y="55" width="30" height="8" rx="4" fill="#2c3e50"/>
    <rect x="10" y="70" width="40" height="4" rx="2" fill="#e74c3c"/>
    <rect x="10" y="80" width="40" height="4" rx="2" fill="#f39c12"/>
  </g>
  
  <!-- n8n nodes -->
  <g transform="translate(300, 100)">
    <circle cx="0" cy="0" r="20" fill="#fff" opacity="0.9"/>
    <text x="0" y="5" text-anchor="middle" fill="#667eea" font-family="Arial" font-size="12" font-weight="bold">n8n</text>
    
    <circle cx="80" cy="40" r="15" fill="#fff" opacity="0.8"/>
    <circle cx="40" cy="80" r="15" fill="#fff" opacity="0.8"/>
    
    <!-- Connections -->
    <path d="M20 10 L65 30" stroke="#fff" stroke-width="2"/>
    <path d="M10 20 L30 65" stroke="#fff" stroke-width="2"/>
  </g>
  
  <!-- Chat bubble -->
  <g transform="translate(400, 150)">
    <ellipse cx="0" cy="0" rx="40" ry="25" fill="#fff" opacity="0.9"/>
    <path d="M-20 20 L-30 35 L-10 25 Z" fill="#fff" opacity="0.9"/>
    <circle cx="-15" cy="-5" r="3" fill="#3498db"/>
    <circle cx="0" cy="-5" r="3" fill="#3498db"/>
    <circle cx="15" cy="-5" r="3" fill="#3498db"/>
  </g>
  
  <!-- Title -->
  <text x="300" y="320" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="24" font-weight="bold">
    Automação com ChatBot e N8N
  </text>
  <text x="300" y="350" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-family="Arial, sans-serif" font-size="16">
    Revolucione Seus Processos
  </text>
</svg> 